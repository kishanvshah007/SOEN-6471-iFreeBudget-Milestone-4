<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="net.mjrz.fm.entity.beans.User" table="TB_USERS">
		<id name="uid" column="uid" type="long"/>
		<property name="userName" type="java.lang.String"/>
		<property name="userPassword" type="net.mjrz.fm.entity.beans.types.EString"> 
			<column name="userPassword" sql-type="varchar(512)" /> 
		</property>
		
	</class>
</hibernate-mapping>